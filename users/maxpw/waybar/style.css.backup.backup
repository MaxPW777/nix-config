/* =============================================================================
*
* Waybar configuration - Modern Style (Cleaned & Optimized)
*
* Configuration reference: https://github.com/Alexays/Waybar/wiki/Configuration
*
* =========================================================================== */

@import 'themes/kanagawa.css';

/* -----------------------------------------------------------------------------
* Base styles
* -------------------------------------------------------------------------- */

* {
  border: none;
  border-radius: 0;
  font-family: 'JetBrains Mono', 'Hack Nerd Font', 'UbuntuMono', monospace;
  font-size: 14px;
  font-weight: 600;
  min-height: 0;
  padding: 0;
  margin: 0;
}

window#waybar {
  background: rgba(31, 31, 40, 0.85);
  border-bottom: 1px solid rgba(149, 127, 184, 0.4);
}

/* -----------------------------------------------------------------------------
* Tooltips
* -------------------------------------------------------------------------- */

tooltip {
  background: @background-primary;
  color: @text;
  border: 1px solid @border-color;
  border-radius: 8px;
  padding: 8px 12px;
}

tooltip label {
  color: @text;
  font-size: 12px;
}

/* -----------------------------------------------------------------------------
* Workspaces
* -------------------------------------------------------------------------- */

#workspaces {
  background: @background-primary;
  padding: 6px;
  margin: 8px 4px;
  border-radius: 14px;
  border: 2px solid @border-color;
}

#workspaces button {
  padding: 8px 12px;
  margin: 0 3px;
  background: @background-primary;
  color: @subtext0;
  border-radius: 10px;
  font-weight: bold;
  border: 1px solid @border-color;
  transition: all 0.2s ease-in-out;
}

#workspaces button:hover {
  background: @background-hover;
  color: @lavender;
  border-color: @mauve;
}

#workspaces button.active,
#workspaces button.focused {
  background: @mauve;
  color: @base;
  font-weight: bold;
  opacity: 1;
  border-color: @pink;
}

#workspaces button.empty {
  opacity: 0.3;
}

#workspaces button.urgent {
  background: @error;
  color: @base;
  border-color: @maroon;
}

/* -----------------------------------------------------------------------------
* Clock
* -------------------------------------------------------------------------- */

#clock {
  background: @blue;
  color: @base;
  font-weight: bold;
  margin: 8px 4px;
  padding: 10px 16px;
  border-radius: 14px;
  font-size: 15px;
}

/* -----------------------------------------------------------------------------
* System monitoring modules
* -------------------------------------------------------------------------- */

#memory {
  background: @background-primary;
  color: @green;
  border-left: 4px solid @green;
  border-radius: 14px 0 0 14px;
  margin: 8px 0;
  padding: 10px 14px;
}

#cpu {
  background: @background-primary;
  color: @blue;
  border-left: 4px solid @blue;
  margin: 8px 0;
  padding: 10px 14px;
}

#temperature {
  background: @background-primary;
  color: @teal;
  border-left: 4px solid @teal;
  margin: 8px 0;
  padding: 10px 14px;
}

#disk {
  background: @background-primary;
  color: @yellow;
  border-left: 4px solid @yellow;
  border-radius: 0 14px 14px 0;
  margin: 8px 4px 8px 0;
  padding: 10px 14px;
}

#temperature.critical {
  background: @error;
  color: @base;
  border-left: 4px solid @maroon;
}

/* -----------------------------------------------------------------------------
* Battery
* -------------------------------------------------------------------------- */

#battery {
  background: @background-primary;
  color: @green;
  border-left: 4px solid @green;
  margin: 6px 2px;
  padding: 8px 12px;
  border-radius: 12px;
}

#battery.charging {
  color: @yellow;
  border-left: 4px solid @yellow;
}

#battery.warning {
  background: @warning;
  color: @base;
  border-left: 4px solid @peach;
}

#battery.critical:not(.charging) {
  background: @error;
  color: @base;
  border-left: 4px solid @maroon;
}

/* -----------------------------------------------------------------------------
* Audio
* -------------------------------------------------------------------------- */

#pulseaudio {
  background: @background-primary;
  color: @yellow;
  border-left: 4px solid @yellow;
  border-radius: 14px;
  margin: 8px 4px;
  padding: 10px 14px;
}

#pulseaudio.muted {
  color: @subtext0;
  border-left: 4px solid @subtext0;
}

/* -----------------------------------------------------------------------------
* Network
* -------------------------------------------------------------------------- */

#network {
  background: @background-primary;
  color: @green;
  border-left: 4px solid @green;
  margin: 6px 2px;
  padding: 8px 12px;
  border-radius: 12px;
}

#network.disconnected {
  color: @error;
  border-left: 4px solid @error;
}

#network.disabled {
  color: @subtext0;
  border-left: 4px solid @subtext0;
}

/* -----------------------------------------------------------------------------
* Language and Keyboard
* -------------------------------------------------------------------------- */

#language {
  background: @background-primary;
  color: @mauve;
  border-left: 4px solid @mauve;
  margin: 8px 0 8px 4px;
  padding: 10px 14px;
  border-radius: 14px 0 0 14px;
}

#keyboard-state {
  background: @background-primary;
  color: @mauve;
  border-left: 4px solid @mauve;
  margin: 8px 4px 8px 0;
  padding: 10px 14px;
  border-radius: 0 14px 14px 0;
}

/* -----------------------------------------------------------------------------
* Custom modules
* -------------------------------------------------------------------------- */

#custom-launcher {
  background: @mauve;
  color: @base;
  font-size: 18px;
  font-weight: bold;
  margin: 8px 4px 8px 10px;
  padding: 10px 16px;
  border-radius: 14px;
  border: 2px solid @pink;
}

#custom-cava {
  background: @background-primary;
  color: @green;
  border-left: 4px solid @green;
  margin: 8px 4px;
  padding: 10px 14px;
  border-radius: 14px;
  font-family: 'JetBrains Mono', monospace;
  font-size: 12px;
}

#custom-notification {
  background: @background-primary;
  color: @lavender;
  border-left: 4px solid @lavender;
  margin: 8px 4px;
  padding: 10px 14px;
  border-radius: 14px;
  font-size: 16px;
}

/* -----------------------------------------------------------------------------
* Tray
* -------------------------------------------------------------------------- */

#tray {
  background: @background-secondary;
  padding: 8px 12px;
  margin: 8px 10px 8px 4px;
  border-radius: 14px;
  border: 1px solid @border-color;
}

#tray > .passive {
  opacity: 0.7;
}

#tray > .needs-attention {
  background-color: @error;
  border-radius: 6px;
  color: @base;
}

/* -----------------------------------------------------------------------------
* Idle inhibitor
* -------------------------------------------------------------------------- */

#idle_inhibitor {
  background: @background-primary;
  color: @yellow;
  border-left: 4px solid @yellow;
  margin: 8px 4px;
  padding: 10px 14px;
  border-radius: 14px;
}

#idle_inhibitor.activated {
  background: @yellow;
  border-left: 4px solid @background-primary;
  color: @base;
}

/* -----------------------------------------------------------------------------
* Hover effects
* -------------------------------------------------------------------------- */

#clock:hover,
#battery:hover,
#cpu:hover,
#memory:hover,
#temperature:hover,
#backlight:hover,
#network:hover,
#pulseaudio:hover,
#custom-launcher:hover,
#language:hover,
#custom-cava:hover {
  opacity: 0.8;
}

/* -----------------------------------------------------------------------------
* Simple transitions for hover effects
* -------------------------------------------------------------------------- */

#workspaces button {
  transition: all 0.2s ease-in-out;
}